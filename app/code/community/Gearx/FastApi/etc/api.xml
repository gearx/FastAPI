<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <gxproduct translate="title" module="gxapi">
                <title>Gearx Fast API Product</title>
                <model>gxapi/product_api</model>
                <methods>
                    <update translate="title" module="gxapi">
                        <title>Update Products</title>
                    </update>
                    <checkSkus translate="title" module="gxapi">
                        <title>Check If Skus Exist</title>
                    </checkSkus>
                </methods>
                <faults module="gxapi">
                    <store_not_exists>
                        <code>100</code>
                        <message>Requested store view not found.</message>
                    </store_not_exists>
                    <product_not_exists>
                        <code>101</code>
                        <message>Product not found.</message>
                    </product_not_exists>
                    <attribute_not_exists>
                        <code>102</code>
                        <message>Attribute not found.</message>
                    </attribute_not_exists>
                    <attribute_not_supported>
                        <code>103</code>
                        <message>Attribute not supported.</message>
                    </attribute_not_supported>
                </faults>
            </gxproduct>
        </resources>
    </api>
</config>
